<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="tv"
    android:gravity="center"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtJoke"
            android:layout_width="224dp"
            android:layout_height="105dp"
            android:text="Шутка загружается..."/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="224dp"
            android:layout_height="19dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="URL кртинки загружается..." />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="ID загружается..." />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Дата обновления загружается..." />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="URL шутки загружается..." />

        <Button
            android:id="@+id/btnClick"
            android:layout_width="224dp"
            android:layout_height="42dp"
            android:text="ОТПРАВИТЬ ЗАПРОС" />

    </LinearLayout>


</RelativeLayout>